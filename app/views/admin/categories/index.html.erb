<%= render "admin/application/admin-links" %>
<table class="table table-striped" width="100%">
	<thead>
		<tr>
			<th colspan="2"><%= link_to "+", new_admin_category_path, :class => "btn btn-mini btn-primary" %> Categories</th>
		</tr>
	</thead>
	<tbody>
		<% for cat in @categories %>
			<tr>
				<td width="80%"><%= cat.id %> . <%= link_to cat.title, admin_category_path(cat)  %> <% if cat.description %><small>&mdash; <%= cat.description %></small><% end %></td>
				<td width="5%"><div class="btn-group"><%= link_to "E", edit_admin_category_path(cat), :class => "btn btn-mini btn-info"  %> <%= link_to "D", admin_category_path(cat), :method => :delete, :class => "btn btn-mini btn-danger"  %></div></td>			
			<tr>
		<% end %>
	</tbody>
</table>	